<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta charset="UTF-8">
    <link rel='stylesheet' href='/font-awesome-4.7.0/css/font-awesome.min.css'/>
    <link rel='stylesheet' href="/stylesheets/studentInformation.css"/>
    <script src="/lib/jquery-3.1.1.min.js"></script>
    <script src="/lib/layer-v3.1.1/layer-v3.1.1/layer/layer.js"></script>
    <script src="/font_alibaba_1.0/iconfont.js"></script>
  </head>
  <body>
    <div class="top">
        <div class="left">
            <div class="home">
                <svg class="icon" aria-hidden="true">
                    <use xlink:href="#icon-fanhui"></use>
                </svg>
            </div>
        </div>
        <div class="right">
            <div class="user">
                <%= student.sname + " (" + student.sno + ")" %>
            </div>
        </div>
    </div>
    <div class="container" id="container">
        <div class="form-container sign-up-container">
            <form id="passwordForm" οnsubmit="return false" action="" method="POST">
                <h1>修改密码</h1>
                <input id="m_sno" type="hidden" name="sno" value="<%= student.sno %>"/>
                <div class="line">
                    <span>新&nbsp;密&nbsp;码&nbsp;: </span>
                    <input id="password1" type="password" class="form-input" name="password1" value="<%= user.password %>" autocomplete="off"/>
                </div>
                <span id="password1-tip" class="form-tip"></span>
                <div class="line">
                    <span>确认密码: </span>
                    <input id="password2" type="password" class="form-input" name="password2" value="<%= user.password %>" autocomplete="off"/>
                </div>
                <span id="password2-tip" class="form-tip"></span>
                <button id="passwordBtn" type="button">修改</button>
            </form>
        </div>
        <div class="form-container sign-in-container">
            <form id="informationForm" οnsubmit="return false" action="" method="POST">
                <h1>修改个人信息</h1>
                <div class="line">
                    <span>学号:</span>
                    <input id="sno" type="text" class="form-input" name="sno" value="<%= student.sno %>" readonly="readonly"/>
                </div>
                <span id="sno-tip" class="form-tip"></span>
                <div class="line">
                    <span>姓名:</span>
                    <input id="sname" type="text" class="form-input" name="sname" value="<%= student.sname %>" />
                </div>
                <span id="sname-tip" class="form-tip"></span>
                <div class="line">
                    <span>班级:</span>
                    <input id="sclass" type="text" class="form-input" name="sclass" value="<%= student.sclass %>" />
                </div>
                <span id="sclass-tip" class="form-tip"></span>
                <button id="informationBtn" type="button" >修改</button>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <button class="ghost" id="signIn" type="button">修改个人信息</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <button class="ghost" id="signUp" type="button">修改密码</button>
                </div>
            </div>
        </div>
    </div>
  </body>
  <script src="/javascripts/studentInformation.js"></script>
</html>
